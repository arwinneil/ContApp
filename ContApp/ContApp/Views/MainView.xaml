<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContApp.Views.MainView">
    <!--LAYOUT ROOT-->
    <StackLayout  VerticalOptions="Fill" HorizontalOptions="FillAndExpand">

        <!--LIST OF CONTACTS-->

        <StackLayout VerticalOptions="FillAndExpand">

            <ListView  ItemsSource="{Binding ContactList}" HasUnevenRows="True" VerticalOptions="FillAndExpand" ItemSelected="NavigateToContact">

                <ListView.ItemTemplate>

                    <DataTemplate>
                        <ViewCell>

                            <!--CONTACT-->
                            <StackLayout Padding="5">

                                <Grid  Padding="0,0,20,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="75" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="40" />
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding ContactImageURL}" Aspect="AspectFill" />
                                    <Image Grid.Row="0" Grid.Column="2" Source="/Resources/drawable/rarrow.png" Aspect="AspectFit" />
                                    <StackLayout Grid.Row="0" Grid.Column="1" Padding="15,0,0,0" VerticalOptions="FillAndExpand">
                                        <Label  Text="{Binding ContactName}" FontSize="20" />
                                        <Label  Text="{Binding ContactNumber}" FontSize="18" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>